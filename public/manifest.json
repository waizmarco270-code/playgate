{
    "theme_color": "#121212",
    "background_color": "#121212",
    "display": "standalone",
    "scope": "/",
    "start_url": "/",
    "id": "/",
    "name": "PlayGate - Your Offline Video Universe",
    "short_name": "PlayGate",
    "description": "A professional, modern PWA video player that allows users to import, organize, and play locally stored videos completely offline.",
    "file_handlers": [
        {
            "action": "/",
            "accept": {
                "video/mp4": [".mp4"],
                "video/webm": [".webm"],
                "video/ogg": [".ogg"],
                "video/quicktime": [".mov"],
                "video/x-matroska": [".mkv"],
                "video/*": [".mp4", ".webm", ".ogg", ".mov", ".mkv"]
            }
        }
    ],
    "icons": [
        {
            "src": "/logo.jpg",
            "sizes": "192x192",
            "type": "image/jpeg",
            "purpose": "any maskable"
        },
        {
            "src": "/logo.jpg",
            "sizes": "512x512",
            "type": "image/jpeg",
            "purpose": "any maskable"
        }
    ]
}