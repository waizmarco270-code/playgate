{
  "name": "PlayGate - Your Offline Video Universe",
  "short_name": "PlayGate",
  "description": "A professional, modern PWA video player that allows users to import, organize, and play locally stored videos completely offline.",
  "icons": [
    {
      "src": "/logo.jpg",
      "sizes": "192x192",
      "type": "image/jpeg",
      "purpose": "any maskable"
    },
    {
      "src": "/logo.jpg",
      "sizes": "512x512",
      "type": "image/jpeg",
      "purpose": "any maskable"
    }
  ],
  "start_url": "/",
  "display": "standalone",
  "background_color": "#121212",
  "theme_color": "#121212",
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "video/*": [
          ".mp4",
          ".webm",
          ".ogg",
          ".mov",
          ".avi",
          ".mkv"
        ]
      }
    }
  ]
}
